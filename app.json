{
  "expo": {
    "name": "Dream Journal Pro",
    "slug": "dream-journal-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "AI-powered dream analysis and pattern recognition for deeper self-understanding",
    "keywords": ["dreams", "journal", "ai", "psychology", "wellness", "mindfulness"],
    "privacy": "public",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dreamjournalpro.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record voice notes for your dreams.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dreamjournalpro.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "allowBackup": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Dream Journal Pro",
      "shortName": "DreamJournal",
      "lang": "en",
      "scope": "/",
      "themeColor": "#6366f1",
      "backgroundColor": "#111827",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "."
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366f1",
      "androidMode": "default",
      "androidCollapsedTitle": "Dream Journal Pro"
    },
    "plugins": [
      "expo-av",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
